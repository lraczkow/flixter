<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3>
      <%= link_to course.title, course_path(course), class: 'link-to-text-color' %>
    </h3>
    <br />
    <% if course.image.url %>
      <%= image_tag course.image.url, class: 'img-fluid' %>
    <% end %>
    <br />
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>

  <h1 class="text-center">What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3>
      <%= link_to course.title, course_path(course), class: 'link-to-text-color' %>
    </h3>
    <br />
    <% if course.image.url %>
      <%= image_tag course.image.url, class: 'img-fluid' %>
    <% end %>
    <br />
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  <% end %>
  <hr class="col-8 offset-2">
  <br class="clr">
</div>